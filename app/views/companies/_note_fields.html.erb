<div class='nested-fields'>
    <%= f.input :data, label: false, wrapper: :vertical_input_group do %>
	    <%= f.input_field :data, as: :string, placeholder: 'Enter company note here', class: 'form-control' %>
	    <span class='input-group-btn'>
	    	<%= link_to_remove_association f, class: 'btn btn-danger' do %>
				<%= fa_icon 'trash-o', class: 'fa-lg' %>
	    	<% end %>
	    </span>
    <% end %>
</div>