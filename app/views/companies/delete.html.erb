<% @page_title = "Companies - Delete" %>

<div>
	<div>
		<h2>Delete Company</h2>
		<%= link_to("Back to List", {action: 'index', search: @search_value, sort: @sort_direction}, class: 'btn btn-info') %>
	</div>
	<%= simple_form_for(@company,
				 		url: {
						 	action: 'destroy',
						 	id: @company.id,
						 	search: @search_value,
						 	sort: @sort_direction
						},
						method: 'delete') do |f| %>
		<p>Are you sure you want to permanently delete this company?</p>
		<p><%= @company.name %></p>
		<%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
	<% end %>
</div>