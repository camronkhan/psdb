<% @page_title = "Companies - Details" %>

<div>
	<h2 class="page-title">Company Details</h2>
	<%= link_to("Back to List", {action: 'index', search: @search_value, sort: @sort_direction}, class: 'btn btn-info') %>
	<table summary="Company detail view" class="table table-striped">
		<tr>
			<th>Name</th>
			<td><%= @company.name %></td>
		</tr>
		<tr>
			<th>Website</th>
			<td><%= @company.website_url %></td>
		</tr>
		<tr>
			<th>Products</th>
			<td><%= @company.products.size %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @company.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @company.updated_at %></td>
		</tr>
	</table>
</div>