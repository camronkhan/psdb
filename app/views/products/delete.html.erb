<% @page_title = "Products - Delete" %>

<div class="products-delete">
	<h2 class="page-title">Delete Product</h2>
	<%= link_to("Back to List", {action: 'index', search_for: @search_value, filter_by_product: @filter_by_product, filter_by_company: @filter_by_company, filter_by_tag: @filter_by_tag, sort_by: @sort_direction}, class: 'btn btn-info') %>
	<div class="form-section">
		<%= simple_form_for(@product,
					 		url: {
							 	action: 'destroy',
							 	id: @product.id,
							 	search: @search_value,
							 	sort: @sort_direction
							},
							method: 'delete') do |f| %>
			<div class="panel panel-danger">
				<div class="panel-heading">
					Are you sure you want to permanently delete this product?
				</div><!-- /.panel-heading -->
				<div class="panel-body">
					<%= @product.name %>
				</div><!-- /.panel-body -->
			</div><!-- /.panel -->
			<div class="form-section">
				<%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
			</div><!-- /.form-section -->
		<% end %><!-- /%simple_form_for -->
	</div><!-- /.form-section -->
</div><!-- /.products-delete -->