<% @page_title = "Products" %>

<div class="products index">
	<h2><%= @page_title %></h2>
	
	<%= link_to("Add New Product", {:action => 'new', :search => @search_value, :sort => @sort_direction}, :class => 'action new') %>
	
	<%= form_tag('/products', method: 'get') do %>
		<%= hidden_field_tag(:sort, params[:sort => nil]) %>
		<p>
			<%= label_tag(:search, "Search for:") %>
			<%= text_field_tag(:search, @search_value) %>
			<%= submit_tag("Search") %>
		</p>
	<% end %>

	<div><%= pluralize(@products.size, 'product') %> found</div>
	<table class="table table-striped listing" summary="Product list">
		<thead>
			<tr class="header">
				<th>&nbsp</th>
				<th><%= sortable('Product') %></th>
				<th>Company</th>
				<th>Relevance</th>
				<th>Tags</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><img src="<%= product.image_url %>" class="img-thumbnail" alt="<%= product.name %>" style="height:50px; width:50px; overflow:hidden;"></td>
					<td><%= product.name %></td>
					<td><%= product.company.name %></td>
					<td><%= product.pg_search_rank %></td>
					<td><%= product.tags %></td>
					<td class="actions">
						<%= link_to("Details", {:action => 'show', :id => product.id, :search => @search_value, :sort => @sort_direction}, :class => 'action show') %>
						<%= link_to("Edit", {:action => 'edit', :id => product.id, :search => @search_value, :sort => @sort_direction}, :class => 'action edit') %>
						<%= link_to("Delete", {:action => 'delete', :id => product.id, :search => @search_value, :sort => @sort_direction}, :class => 'action delete') %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= will_paginate @products %>
</div>