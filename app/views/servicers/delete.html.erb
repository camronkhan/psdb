<% @page_title = "Servicers - Delete" %>

<div>
	<div>
		<h2>Delete Servicer</h2>
		<%= link_to("Back to List", {action: 'index', search: @search_value, sort: @sort_direction}, class: 'btn btn-info') %>
	</div>
	<%= simple_form_for(@servicer,
				 		url: {
						 	action: 'destroy',
						 	id: @servicer.id,
						 	search: @search_value,
						 	sort: @sort_direction
						},
						method: 'delete') do |f| %>
		<p>Are you sure you want to permanently delete this servicer?</p>
		<p><%= @servicer.name %></p>
		<%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
	<% end %>
</div>